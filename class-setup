#!/bin/bash

################################################################################
############################### Class Setup ####################################
################################################################################

###########
# GLOBALS #
###########
NEW_NAME=''         # Token owners name
NEW_TOKEN=''        # Token owners PAT
NEW_URL=''          # Instance url to GHE
NEW_ORG=''          # New instance GHE Organization
SURVEY_TOKEN=''     # token to complete survey
SURVEY_SECRET=''    # Secret for survey
SURVEY_CAMPAIGN=''  # Campaign for survey
APPT_URL=''         # Url for appointment
SHELL=''            # What shell the user is using
RC_FILE=''          # RC file to load/pull data
GITHUB_FLAG=0       # 0=github.com 1=githubEnterprise

#################
# Default Files #
#################
TRAINING_FILE=".trainingmanualrc" # Default training file
CLIENT_FILE=".trainingclientrc"   # Default client file

################################################################################
########################## Functions Below #####################################
################################################################################
################################################################################
#### Function ValidateJQ #######################################################
function ValidateJQ ()
{
  #########################
  # Validate jq installed #
  #########################
  VALIDATE_JQ_CMD=$(which jq 2>&1)

  #######################
  # Load the error code #
  #######################
  ERROR_CODE=$?

  ##############################
  # Check the shell for errors #
  ##############################
  if [ $ERROR_CODE -ne 0 ]; then
    echo "ERROR! Failed to find [jq] installed on system!"
    echo "ERROR:[$VALIDATE_JQ_CMD]"
    echo "Please install to system before next run!"
    echo "grab it from https://stedolan.github.io/jq/download/"
    exit 1
  fi
}
################################################################################
#### Function ValidateGitHubInstance ###########################################
function ValidateGitHubInstance ()
{
  ########################################
  # Check if were building on Github.com #
  ########################################
  echo "==============================================="
  echo "Will the class be taught on GitHub.com?"
  echo "Enter (Y)es or (N)o, followed by [ENTER]"
  ##################
  # Read the input #
  ##################
  read -r GITHUB

  ############################################
  # Clean any whitespace that may be entered #
  ############################################
  GITHUB_WHITESPACE="$(echo -e "$GITHUB" | tr -d '[:space:]')"
  GITHUB=$GITHUB_WHITESPACE

  ###################
  # Check the input #
  ###################
  if [[ "$GITHUB" =~ ^([yY][eE][sS]|[yY])+$ ]]; then
    ########################
    # We have a yes answer #
    ########################
    echo "Defaulting to [$TRAINING_FILE]"
    # Set the file
    RC_FILE=$TRAINING_FILE
    # Set the flag
    GITHUB_FLAG=0
  else
    ######################################
    # We need info for Github Enterprise #
    ######################################
    echo "Defaulting to [$CLIENT_FILE]"
    # Set the file
    RC_FILE=$CLIENT_FILE
    # Set the flag
    GITHUB_FLAG=1

    #export TOKEN_OWNER='user'
    #export TEACHER_PAT='TOKEN'
    #export INSTANCE_URL='github-enterprise-url/api/v3'
    #export ROOT_URL='github.com'
    #export CLASS_ORG='NameOfOrg'
  fi
}
################################################################################
#### Function CreateRCFile #####################################################
function CreateRCFile ()
{
  ###########################
  # Create training rc file #
  ###########################
  echo "==============================================="
  echo "We'll create a file to store all training related configs."
  echo "Checking for and creating [$HOME/$RC_FILE]"

  ######################
  # See if file exists #
  ######################
  [ ! -f "$HOME/$RC_FILE" ] && touch "$HOME/$RC_FILE"
  echo "==============================================="
  echo ""
  echo "==============================================="
}
################################################################################
#### Function TokenOwner #######################################################
function TokenOwner ()
{
  ##############################
  # See if we have token owner #
  ##############################
  if [ -z "${TOKEN_OWNER+x}" ]
    then
      echo "It looks like we'll need to add the CLIENT_TOKEN_OWNER var"
      echo "to your ~/$RC_FILE. Please type the github username"
      echo "you'll be using today and we'll add this automatically. Remember, this"
      echo "user will need to have full admin access to the teaching organization."
      #####################
      # Read in the input #
      #####################
      read -r NEW_NAME
      echo "export TOKEN_OWNER='$NEW_NAME'" >> "$HOME/$RC_FILE"
    else
      echo "TOKEN_OWNER = $TOKEN_OWNER."
  fi
  echo "==============================================="
}
################################################################################
#### Function TokenOwnerClient #################################################
function TokenOwnerClient ()
{
  ##############################
  # See if we have token owner #
  ##############################
  if [ -z "${CLIENT_TOKEN_OWNER+x}" ]
    then
      echo "It looks like we'll need to add the CLIENT_TOKEN_OWNER var"
      echo "to your ~/$RC_FILE. Please type the github username"
      echo "you'll be using today and we'll add this automatically. Remember, this"
      echo "user will need to have full admin access to the teaching organization."
      #####################
      # Read in the input #
      #####################
      read -r NEW_NAME
      echo "export CLIENT_TOKEN_OWNER='$NEW_NAME'" >> "$HOME/$RC_FILE"
    else
      echo "CLIENT_TOKEN_OWNER = $CLIENT_TOKEN_OWNER."
  fi
  echo "==============================================="
}
################################################################################
#### Function DemoPAT ##########################################################
function DemoPAT ()
{
  ##############################
  # See if we have teacher pat #
  ##############################
  if [ -z "${TEACHER_PAT+x}" ]; then
    echo "It looks like we need to add the"
    echo "TEACHER_PAT var to your ~/$RC_FILE."
    echo "Please generate a Personal Access token on the"
    echo "account you'll be teaching from and paste it here."
    echo "(Note: the token will not be displayed when entered)"
    #####################
    # Read in the token #
    #####################
    read -r -s NEW_TOKEN
    echo "export TEACHER_PAT='$NEW_TOKEN'" >> "$HOME/$RC_FILE"
  else
    echo "TEACHER_PAT is set!"
  fi

  echo "==============================================="
}
################################################################################
#### Function DemoPATClient ####################################################
function DemoPATClient ()
{
  ##############################
  # See if we have teacher pat #
  ##############################
  if [ -z "${CLIENT_PAT+x}" ]; then
    echo "It looks like we need to add the"
    echo "CLIENT_PAT var to your ~/$RC_FILE."
    echo "Please generate a Personal Access token on the"
    echo "account you'll be teaching from and paste it here."
    echo "(Note: the token will not be displayed when entered)"
    #####################
    # Read in the token #
    #####################
    read -r -s NEW_TOKEN
    echo "export CLIENT_PAT='$NEW_TOKEN'" >> "$HOME/$RC_FILE"
  else
    echo "CLIENT_PAT is set!"
  fi

  echo "==============================================="
}
################################################################################
#### Function InstanceURL ######################################################
function InstanceURL ()
{
  ###############################
  # See if we have instance url #
  ###############################
  if [ -z "${INSTANCE_URL+x}" ]; then
    echo "It looks like you need to add the"
    echo "INSTANCE_URL var to your ~/$RC_FILE. Please type the"
    echo "root endpoint for your github instance."
    echo "For example: api.github.com OR github.mycompany.com/api/v3"
    ##################
    # Read the input #
    ##################
    read -r NEW_URL
    echo "Checking if '$NEW_URL' is accessible... (this may take several minutes)"
    curl -s "$NEW_URL" >> log.out 2>&1

    #######################
    # Load the error code #
    #######################
    ERROR_CODE=$?

    if [ $ERROR_CODE -eq 0 ]
      then
        echo "API endpoint verified"
      else
        echo "Can't access your API via that URL, perhaps it needs authentication, checking..."
    fi

    echo "Checking if '$NEW_URL' is accessible with authentication..."

    if [[ $(curl -s -u "$NEW_NAME:$NEW_TOKEN" "https://$NEW_URL/" | jq .message) = null ]]
      then
        echo "API endpoint + authentication verified"
        echo "export CLIENT_URL='$NEW_URL'" >> "$HOME/$RC_FILE"
      else
        echo "Can't make an authenticated request to the API."
        exit 1
    fi
    if echo "$NEW_URL" | grep -iq "\<api.github.com\>" ;
      then
        echo "export ROOT_URL='github.com'" >> "$HOME/$RC_FILE"
      else
        #strip the API part
        strippedURL=$(echo "$NEW_URL" | sed -E 's/\/api\/v3//')
        echo "export ROOT_URL='$strippedURL'" >> "$HOME/$RC_FILE"
        echo "export INSTANCE_URL='$INSTANCE_URL'" >> "$HOME/$RC_FILE"
    fi
  else
    echo "INSTANCE_URL = $INSTANCE_URL"
    echo "ROOT_URL = $ROOT_URL"
  fi

  echo "==============================================="
}
################################################################################
#### Function InstanceURLClient ################################################
function InstanceURLClient ()
{
  ###############################
  # See if we have instance url #
  ###############################
  if [ -z "${CLIENT_URL+x}" ]; then
    echo "It looks like you need to add the"
    echo "CLIENT_URL var to your ~/$RC_FILE. Please type the"
    echo "root endpoint for your github instance."
    echo "For example: api.github.com OR github.mycompany.com/api/v3"
    ##################
    # Read the input #
    ##################
    read -r NEW_URL
    echo "Checking if '$NEW_URL' is accessible... (this may take several minutes)"
    curl -s "$NEW_URL" >> log.out 2>&1

    #######################
    # Load the error code #
    #######################
    ERROR_CODE=$?

    if [ $ERROR_CODE -eq 0 ]
      then
        echo "API endpoint verified"
      else
        echo "Can't access your API via that URL, perhaps it needs authentication, checking..."
    fi

    echo "Checking if '$NEW_URL' is accessible with authentication..."

    if [[ $(curl -s -u "$NEW_NAME:$NEW_TOKEN" "https://$NEW_URL/" | jq .message) = null ]]
      then
        echo "API endpoint + authentication verified"
        echo "export CLIENT_URL='$NEW_URL'" >> "$HOME/$RC_FILE"
      else
        echo "Can't make an authenticated request to the API."
        exit 1
    fi
    if echo "$NEW_URL" | grep -iq "\<api.github.com\>" ;
      then
        echo "export ROOT_URL='github.com'" >> "$HOME/$RC_FILE"
      else
        #strip the API part
        strippedURL=$(echo "$NEW_URL" | sed -E 's/\/api\/v3//')
        echo "export ROOT_URL='$strippedURL'" >> "$HOME/$RC_FILE"
        echo "export CLIENT_URL='$CLIENT_URL'" >> "$HOME/$RC_FILE"
    fi
  else
    echo "CLIENT_URL = $INSTANCE_URL"
    echo "ROOT_URL = $ROOT_URL"
  fi

  echo "==============================================="
}
################################################################################
#### Function ClassOrg #########################################################
function ClassOrg ()
{
  ##########################
  # See if we have the Org #
  ##########################
  if [ -z "${CLASS_ORG+x}" ]
    then
      echo "It looks like you need to add the CLIENT_CLASS_ORG var"
      echo "to your ~/$RC_FILE. Please type the organization name"
      echo "used for github training on your instance."
      echo "For example: githubschool"
      ##################
      # Read the input #
      ##################
      read -r NEW_ORG
      echo "Checking if $NEW_ORG is accessible via the API..."
      if [[ $(curl -s -u "$NEW_NAME:$NEW_TOKEN" "https://$NEW_URL/orgs/$NEW_ORG" | jq .message) = null ]]
            then
          echo "That organization was verified."
          echo "export CLASS_ORG='$NEW_ORG'" >> "$HOME/$RC_FILE"
        else
          echo "Can't access the organization via the API."
          exit 1
      fi
    else
      echo "CLASS_ORG = $CLIENT_CLASS_ORG"
  fi
  echo "==============================================="
}
################################################################################
#### Function ClassOrgClient ###################################################
function ClassOrgClient ()
